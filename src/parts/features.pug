- const {features:{items, heading}} = require('../data/home.json');

section#features
    header.u-vh
        h2= heading
    .row
        each item in items 
            - let { heading, description, iconName} = item;
            - const iconModifire = `icon-basic-${iconName}`;
            .col-1-of-4
                .feature-box
                    i.feature-box__icon(class= iconModifire aria-hidden="true") &nbsp;
                    h3.heading-3.u-mb-small= heading
                    p.feature-box__text= description
